                              <form style="display: inline;" action="/delete_prop/<%= allprop_user.atlprop_id %>?_method=DELETE" method="POST">
                                  <input type="hidden" name="_method" value="DELETE">
                                  <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                              </form>
                          </td>
                          
                            <td><%= allprop_user.live %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

