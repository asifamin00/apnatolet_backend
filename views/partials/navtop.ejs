<div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel2">Change password</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="post" action="/change_password">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Current password</label>
            <input type="text" class="form-control" id="recipient-name" name="old_password">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">New password</label>
            <input type="text" class="form-control" id="recipient-name" name="new_password">
          </div>
          <input type="text" class="form-control" id="recipient-name" name="email" value="<%=existingUser.email%>" hidden>
       
            </div>
            <div class="modal-footer">             
              <button type="submit" class="btn btn-primary" id="myButton2">Change password</button>
            </div>
    </form>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
</div>



