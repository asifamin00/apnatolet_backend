                    <li class="list-group-item"><b style="color: crimson;">Door facing</b>:&nbsp;<%=prop_approv[0].Facing%></li>
                    <li class="list-group-item"><b style="color: crimson;">Available From</b>:&nbsp;<%=Availablet%></li>
                  </ul>
                </div>
              </div>
             
            </div>
            
            <div class="col-md-4">             
              <div class="card mb-4">                
                <div class="card-body">
                  <ul class="list-group list-group-flush">

                  


                    <li class="list-group-item"><b style="color: crimson;">Rent:</b> &nbsp;&#8377;<%=prop_approv[0].rent%>  / per month </li>
                    <li class="list-group-item"><b style="color: crimson;">Deposit:</b> &nbsp;&#8377;<%=prop_approv[0].deposit%>   </li>
                    <li class="list-group-item"><b style="color: crimson;">Phone</b>:&nbsp;<%=prop_approv[0].users.Phone%></li>
                    <li class="list-group-item"><b style="color: crimson;">Name</b>:&nbsp;<%=prop_approv[0].users.userFname%>&nbsp;<%=prop_approv[0].users.userLname%></li>
                    <li class="list-group-item"><b style="color: crimson;">Additional info</b>:&nbsp;<%=prop_approv[0].add_info_text%></li>
                    
                  </ul>
                </div>
              </div>
              <div class="card mb-4">                
                <div class="card-body">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b style="color: crimson;">House_no</b>:&nbsp;<%=prop_approv[0].House_no%></li>
                    <li class="list-group-item"><b style="color: crimson;">Society</b>:&nbsp;<%=prop_approv[0].Society%></li>
                    <li class="list-group-item"><b style="color: crimson;">Locality</b>:&nbsp;<%=prop_approv[0].Locality%></li>
                    <li class="list-group-item"><b style="color: crimson;">Pin_code</b>:&nbsp;<%=prop_approv[0].Pin_code%></li>
                    <li class="list-group-item"><b style="color: crimson;">City</b>:&nbsp;<%=prop_approv[0].City%></li>
                    <li class="list-group-item"><b style="color: crimson;">GPS</b>:&nbsp;<%=prop_approv[0].Latitude%>&nbsp;<%=prop_approv[0].Longitude%></li>
                    <li class="list-group-item"><b style="color: crimson;">Created on</b>:&nbsp;<%=prop_approv[0].created%></li>
                   
                   
                      <li class="list-group-item">
                        <b style="color: crimson;">Other Rooms:</b>
                          <ul>
                            <% for(var i=0; i<otherRoomt.length; i++) { %>
                                <li>
                                  <%=otherRoomt[i]%>
                                </li>
                            <% } %>
                        </ul>
                      
                      </li>             



                     
                        <li class="list-group-item">
                          <b style="color: crimson;">Amenities:</b>
                          <ul>
                            <% for(var i=0; i<amenitiest.length; i++) { %>
                                <li>
                                  <%=amenitiest[i]%>
                                </li>
                            <% } %>
                        </ul>
                           
                        
                        </li>
                      
                      
                          <li class="list-group-item">
                            <b style="color: crimson;">Furnishing</b>:&nbsp;<%=prop_approv[0].Furnishing%>
                            <ul>
                              <% for(var i=0; i<furnicheckboxt.length; i++) { %>
                                  <li>
                                    <%=furnicheckboxt[i]%>
                                  </li>
                              <% } %>
                          </ul>
                          
                          </li>
                        
                          
                            <li class="list-group-item">
                              <b style="color: crimson;">Willing to Rent</b>
                              <ul>
                                <% for(var i=0; i<willingt.length; i++) { %>
                                    <li>
                                      <%=willingt[i]%>
                                    </li>
                                <% } %>
                            </ul>
                            
                            </li>
                           
                

                    
                  </ul>
                </div>
              </div>
             
            </div>
          </div>
          <div class="btn-group d-flex justify-content-center align-items-center vh-10" role="group" aria-label="Basic mixed styles example" >

