              <button  type="submit" class="btn btn-warning ">Approve</button>
           </form>
            :&nbsp;
            
           
           <form>
            <a style="display: inline;" <button  type="button" class="btn btn-success " href="/edit/<%=prop_approv[0]._id%>">Edit</button></a>

           </form>
           
          </div>
